<table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">1</th>
        <td><%= @profile["id"] %></td>
        <td><%= @profile["name"] %></td>
      </tr>
    </tbody>
</table>

<table class="table table-striped table-bordered table-hover friend_list">
    <thead class="thead-dark">
        <tr>
            <th>id</th>
            <th>message</th>
            <th>created time</th>

        </tr>
    </thead>
    <tbody>
        <% @messages.each do |mess| %>
            <tr class="size">
                <td><%= mess['id']%> </td>
                <td><%= mess['message'] %></td>
                <td><%= mess['created_time'] %></td>
            </tr>
        <% end%>
    </tbody>
</table>  



