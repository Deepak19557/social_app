<h1>
Books:-
<br><br><br>
<table class="table table-striped table-bordered table-hover friend_list">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Book Name</th>
            <th>Language</th>
            <th>Author Name</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr class="size">
                <td><%= book.id %></td>
                <td><%= book.name %></td>
                <td><%= book.language %></td>
                <td><%= book.author_name %></td>
            </tr>
        <% end%>
    </tbody>
</table>
</h1>