<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <style>
            * {
                box-sizing: border-box;
            }
            body {
                margin: 0;
                font-family: Arial, Helvetica, sans-serif;
            }
            .header {
                overflow: hidden;
                background-color: #f1f1f1;
                padding: 20px 10px;
            }
            .header a {
                float: left;
                color: black;
                text-align: center;
                padding: 12px;
                text-decoration: none;
                font-size: 18px;
                line-height: 25px;
                border-radius: 4px;
            }
            .header a.logo {
                font-size: 25px;
                font-weight: bold;
            }
            .header a:hover {
                background-color: #ddd;
                color: black;
            }
            .header a.active {
                background-color: dodgerblue;
                color: white;
            }
            .header-right {
                float: right;
            }

            form {
                display: flex;
                flex-wrap: nowrap;
                /* flex-direction: column; */
                align-content: center;
                /* align-items: center; */
                justify-content: center;
                padding-top: 50px;
            }
            @media screen and (max-width: 500px) {
                .header a {
                    float: none;
                    display: block;
                    text-align: left;
                }
                .header-right {
                    float: none;
                }
            }
        </style>
    </head>
    <body>
        <div class="header">
            <a href="#default" class="logo">Library</a>
            <div class="header-right">
                <%= link_to 'Back', root_path, class: 'btn btn-info' %> <%= link_to "Download Book List", download_csv_path, class: 'btn btn-warning' %> <%= link_to "Delete All", delete_all_book_path, data: {confirm: 'Are you sure want to
                delete all?'}, class: 'btn btn-danger' %>
            </div>
        </div>
    </body>
</html>
<h3 style="text-align: center;">
    Import Book data <%=form_tag import_csv_path, multipart: true do %>
    <div style="text-align: center;">
        <%=file_field_tag :file%>
    </div>
    <%=submit_tag "Import CSV", class: "btn btn-warning" %> <%end%>
</h3>



<%= form_with url: books_path, method: :get, id: 'abc' do |f| %>
  <div class="field">
    <%= f.label :language %>
    <% @bookss = Book.pluck(:language).uniq %>
    <%= f.select :language, options_for_select(@bookss), prompt: "Select a Language" %>
    <%#= f.collection_select :language, Book.all, :language, :language, selected: f.object %>
  </div>
<% end %>
<%= render 'form' %>
<br />
<% if Book.exists? %>
<table class="table table-striped table-bordered table-hover friend_list">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Language</th>
            <th>Author Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr class="size">
            <td><%= book.id %></td>
            <td><%= book.name %></td>
            <td><%= book.language %></td>
            <td><%= book.author_name %></td>
            <td>
                <button style="display: block; margin: 0 auto;" type="button" class="btn btn-info btn-lg" id="edit_book" data-toggle="modal" data-target="#myModal">New Book</button>
            </td>
            <td>
                <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#editModal<%=book.id%>" aid="<%= book.id %>">
                    Edit
                </button>
                <div class="modal fade" id="editModal<%=book.id%>" tabindex="-1" role="dialog" aria-labelledby="editModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editModalLabel">Edit Form</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <%= render 'edit_form', object: book %>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
            <td><%= link_to 'Delete', book, method: :delete, :remote => true, data: {confirm: 'are you sure ?'}, :class => 'delete_book btn btn-danger' %></td>
        </tr>
        <% end%>
    </tbody>
</table>
<%end%>

<%#= will_paginate @books %>
<%#= page_entries_info @books %>
<%#= paginate @books %>



<script type="text/javascript">
$(document).ready( function(){
  $('select').on("change",function(e){
    $('#abc').submit();
  });
});
</script>
