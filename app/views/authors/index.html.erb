<%= render 'form' %>
<table class="table table-striped table-bordered table-hover friend_list">
  <thead class="thead-dark">
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Number</th>
      <th>Email</th>
      <th>
        Action
        <%= link_to 'Back',  root_path, class: 'btn btn-success' %>
        <%= link_to 'Delete_all', delete_all_authors_path, class: 'btn btn-danger'  %>
      </th>
    </tr>
  </thead>
    <tbody>
      <% @authors.each do |author| %>
        <tr class="size">
          <td><%= author.id %></td>
          <td><%= author.number %></td>
          <td><%= author.name %></td>
          <td><%= author.email %></td>
          <td>
            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#editModal<%=author.id%>" aid="<%= author.id %>">
                Edit
            </button>
            <div class="modal fade" id="editModal<%=author.id%>" tabindex="-1" role="dialog" aria-labelledby="editModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editModalLabel">Edit Form</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <%= render 'edit_form', object: author %>
                        </div>
                    </div>
                </div>
            </div>
            <%= link_to 'Delete', author_delete_path(id: author.id), method: :delete, :remote => true,  :class => 'delete_author btn btn-danger' %>
            <button style="display: block; margin: 0 auto;" type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">New Author</button>
          </td>
        </tr>
      <% end%>
    </tbody>
</table>  

